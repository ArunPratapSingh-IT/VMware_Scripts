#Command clear Before running the script
Clear-host

#vcenter name
$vCenter_Name = "alp00***"

#Connect to the vcenter
$vCenter = Connect-VIserver -Server "$Vcenter_Name" -Port 443 -user administrator@vsphere.local -Password "VMware123!"

#List of All host in the vCenter
$Host_List = Get-VMhost -Server $vCenter_Name |select Name,Version,PowerState

#List of All VMS
$VM_List = Get-VM -server $vCenter_Name |select Name,Version,PowerState
